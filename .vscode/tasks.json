{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "osx": {
                "args": [
                    "build",
                    "${workspaceFolder}/src/Nonius/Nonius.csproj",
                    "-p:Platform=osx-arm64"
                ],
            },
            "windows": {
                "args": [
                    "build",
                    "${workspaceFolder}/src/Nonius/Nonius.csproj",
                    "-p:Platform=win-x64"
                ],
            }
        },
        {
            "label": "release",
            "command": "dotnet",
            "type": "process",
            "osx": {
                "args": [
                    "publish",
                    "${workspaceFolder}/src/Nonius/Nonius.csproj",
                    "-c",
                    "Release",
                    "-r",
                    "osx-arm64",
                    "-p:Platform=osx-arm64",
                    "-p:UseAppHost=true",
                    //"-p:PublishSingleFile=true", // Causes error
                ],
            },
        },
        {
            "label": "bundle",
            "command": "sh",
            "type": "process",
            "osx": {
                "args": [
                    "${workspaceFolder}/src/bundle-macos.sh"
                ]
            },
            "dependsOn": "release",
        }
    ]
}
